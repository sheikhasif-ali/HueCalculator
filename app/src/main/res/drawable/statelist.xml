<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Normal state -->
    <item android:drawable="@drawable/round_button" />

    <!-- Pressed state -->
    <item android:state_pressed="true" android:drawable="@drawable/round_button" />

    <!-- Focused state (typically for buttons) -->
    <item android:state_focused="true" android:drawable="@drawable/round_button" />

    <!-- Disabled state -->
    <item android:state_enabled="false" android:drawable="@drawable/round_button" />
</selector>
