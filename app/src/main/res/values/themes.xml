<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HueCalculator"
        parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.HueCalculator"
        parent="Base.Theme.HueCalculator">
        <item name="android:colorBackground">@color/primaryDay</item>
        <item name="android:statusBarColor">@color/primaryDay</item>
         <item name="android:windowLightStatusBar">true</item>




    </style>

    <style name="Calc.Button"
        parent="Theme.HueCalculator">
        <item name="colorPrimary">@color/secondaryDay</item>
        <item name="colorOnPrimary">@color/textDay</item>
        <item name="android:textSize">25sp</item>
        <item name="colorPrimaryVariant">@color/primaryDay</item>
    </style>

    <style name="Calc.Operator.Button"
        parent="Theme.HueCalculator">
        <item name="colorOnPrimary">@color/orange</item>
        <item name="android:textSize">25sp</item>
        <item name="colorPrimary">@color/secondaryDay</item>
    </style>



</resources>